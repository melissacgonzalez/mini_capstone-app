<h1>Mystical Products</h1>
<% @products.each_slice(3) do |three_products| %>
  <div class="row">
    <% three_products.each do |product| %>
      <div class="col-md-4">
        <div class="well">
          <a href="/products/<%= product.id %>">
            <img id="prod_main_img" src="<%= product.images.first.url %>" alt="<%= product.name %>">
          </a>
          <div class="caption">
            <h3><%= product.name %></h3>
            <p>$<%= product.price %></p>
            <p><%= product.description %></p>

            <p><a href="/products/<%= product.id %>" class="btn btn-primary" role="button">View Product</a> <a href="/products/<%= product.id %>/edit" class="btn btn-default" role="button">Edit Product</a></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>