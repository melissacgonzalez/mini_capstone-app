<h1>Shopping Cart</h1>
<% @carted_products.each do |carted_product| %>
  <div class="row">
    <div class="col-md-3"><h3><%= carted_product.product.name %></h3></div>
    <div class="col-md-3"><h3>Quantity: <%= carted_product.quantity %></h3></div>
    <div class="col-md-3">
      <%= form_tag "/carted_products/#{carted_product.id}", method: :delete do %>
        <input type="submit" value="Remove Item from Cart" class="btn btn-primary">
      <% end %>

    </div>
  </div>
  
  

<% end %>


<%= form_tag "/orders", method: :post do %>  
  <div class="form-group">
    <input type="submit" value="Buy Now" class="btn btn-primary btn-lg">
  </div>
<% end %>