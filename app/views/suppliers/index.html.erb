<div class="row">
  <div class="col-md-10"><h1>Mysical Suppliers</h1></div>
  <div class="col-md-2"><a href="/suppliers/new" class="btn btn-primary" role="button">Add New Supplier</a></div>
</div>

<% @suppliers.each do |supplier| %>
  <div class="well">
    <div class="row">
      <div class="col-md-9">
        <h2><%= supplier.name %></h2>
      </div>
      <div class="col-md-3">
        <a href="/suppliers/<%= supplier.id %>" class="btn btn-primary btn-lg" role="button">View Details</a>
        <a href="/suppliers/<%= supplier.id %>/edit" class="btn btn-default btn-lg" role="button">Edit</a>
      </div>
    </div>
  </div>
<%end%>


