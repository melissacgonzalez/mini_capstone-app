<h1>Mysical Suppliers</h1>

<% @suppliers.each do |supplier| %>
  <div class="well">
    <div class="row">
      <div class="col-md-6">
        <h3><%= supplier.name %></h3>
      </div>
      <div class="col-md-4">
        <h4>Email: <%= supplier.email %></h4>
        <h4>Phone: <%= supplier.phone_number %></h4>
      </div>
      <div class="col-md-2">
        <a href="/suppliers/<%= supplier.id %>" class="btn btn-primary btn-lg" role="button">View Details</a>
      </div>
    </div>
  </div>
<%end%>


